pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        deleteDir()
        checkout scm
      }
    }

    stage('OWASP Dependency-Check') {
      steps {
        dir('SecurityService') {
          withCredentials([string(credentialsId: 'NVD_API_KEY', variable: 'NVD_KEY')]) {
            bat '''
              echo OWASP Dependency-Check (avec NVD API Key)
              if exist mvnw.cmd (
                call mvnw.cmd -B dependency-check:check -DnvdApiKey=%NVD_KEY%
              ) else (
                mvn -B dependency-check:check -DnvdApiKey=%NVD_KEY%
              )
            '''
          }
        }
      }
      post {
        always {
          archiveArtifacts artifacts: 'SecurityService/target/dependency-check-report.*', allowEmptyArchive: true
        }
      }
    }
  }
}
