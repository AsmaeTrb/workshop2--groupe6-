pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        deleteDir()
        checkout scm
      }
    }

    stage('OWASP Dependency-Check') {
      steps {
        bat """
        docker run --rm ^
          -v "%CD%:/src" ^
          owasp/dependency-check ^
          --scan /src/SecurityService ^
          --format HTML ^
          --out /src/dependency-check-report
        """
      }
      post {
        always {
          archiveArtifacts artifacts: 'dependency-check-report/**', allowEmptyArchive: true
        }
      }
    }
  }
}
