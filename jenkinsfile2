pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        deleteDir()
        checkout scm
      }
    }

    stage('OWASP Dependency-Check (SecurityService)') {
      steps {
        dir('SecurityService') {
          bat '''
            echo Lancement OWASP Dependency-Check
            if exist mvnw.cmd (
              call mvn dependency-check:check -DautoUpdate=false
            ) else (
              mvn dependency-check:check
            )
          '''
        }
      }
      post {
        always {
          archiveArtifacts artifacts: 'SecurityService/target/dependency-check-report.*', allowEmptyArchive: true
        }
      }
    }
  }
}
